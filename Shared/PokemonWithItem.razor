@using PKHeX.Core
@using PKHeX.Core.Items
@using PKHeX.Core.PKM
@using PKHeX.Core.Util
@using PKHeX.Core.Resources
@using PKHeX.Core.PersonalInfo
@using PKHeX.Drawing
@using PKHeX.Drawing.Misc
@using PKHeX.Drawing.PokeSprite
@using PKHeX.WinForms
@using PKHeX.Core.Game
@inject Services.SpriteService SpriteService

@if (Pokemon != null && Pokemon.Species != 0)
{
  <img src="@SpriteService.GetPokemon(Pokemon)" alt="" />
  @if (Pokemon.SpriteItem != 0)
  {
    <img src="@SpriteService.GetItem(Pokemon.SpriteItem)" alt="" style="position:absolute;bottom:0;right:0;" />
  }
}

@code {
  [Parameter]
  public PKM? Pokemon { get; set; }
}
